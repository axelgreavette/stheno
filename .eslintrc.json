{
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "script"
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "arrow-spacing": "error",
        "prefer-arrow-callback": "error",
        "no-undef": "off",
        "no-var": "error"
    },
    "env": {
        "es6": true,
        "node": true
    },
    "root": true,
    "extends": "eslint:recommended"
}